{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>{{ program.country }} - {{ program.year }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <h2>Liste des saisons</h2>
            <ul>
                {% for season in program.seasons %}
                    <li><a href="{{ path('program_season_show', { programId: program.id, seasonId: season.id }) }}">Season {{ season.number }}, {{ season.year }}</li>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}